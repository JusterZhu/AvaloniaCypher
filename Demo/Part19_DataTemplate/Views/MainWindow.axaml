<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Part19_DataTemplate.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Part19_DataTemplate.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Part19_DataTemplate.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Part19_DataTemplate">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <TabControl>
        <TabItem Header="Basic">
            <views:BasicView />
        </TabItem>
        <TabItem Header="DataTemplates">
            <views:DataTemplatesView />
        </TabItem>
        <TabItem Header="IDataTemplateView">
            <views:IDataTemplateView />
        </TabItem>
        <TabItem Header="FuncDataTemplate">
            <views:FuncDataTemplateView />
        </TabItem>
    </TabControl>
</Window>