<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="AvaloniaMVVM.Shell.Views.Home"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvaloniaMVVM.Shell.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.DataContext>
        <vm:HomeViewModel />
    </UserControl.DataContext>
    <Border>
        <StackPanel>
            <Grid ColumnDefinitions="auto,*" Margin="10">
                <TextBlock
                    MinWidth="100"
                    Text="Name"
                    VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Text="{Binding User.Name}" />
            </Grid>
            <Grid ColumnDefinitions="auto,*" Margin="10">
                <TextBlock
                    MinWidth="100"
                    Text="Sex"
                    VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Text="{Binding Sex}" />
            </Grid>
            <StackPanel
                HorizontalAlignment="Right"
                Margin="10"
                Orientation="Horizontal">
                <Button
                    Command="{Binding OK}"
                    CommandParameter="历史"
                    Content="OK" />
                <Button
                    Command="{Binding CancelCommand}"
                    CommandParameter="语文"
                    Content="Cancel" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
