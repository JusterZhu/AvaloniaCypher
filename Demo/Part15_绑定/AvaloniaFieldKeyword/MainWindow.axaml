<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avaloniaFieldKeyword="clr-namespace:AvaloniaFieldKeyword"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaFieldKeyword.MainWindow"
        x:DataType="avaloniaFieldKeyword:MainViewModel"
        Title="AvaloniaFieldKeyword">
        <StackPanel>
                <TextBox Name="TextBox"></TextBox>
                <Button Command="{Binding Path=TextUpdated}" CommandParameter="{Binding #TextBox.Text}">Update</Button>
                <TextBlock Text="{Binding Path=Text}"></TextBlock>
        </StackPanel>
</Window>
