<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Part14_ControlTheme.Controls"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
             x:Class="Part14_ControlTheme.Views.StyleKey">
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="Red" />
        </Style>
    </UserControl.Styles>
    <StackPanel>
        <Button Content="Button" />
        <controls:MyButton1 Content="MyButton1" />
        <controls:MyButton2 Content="MyButton2" />
        <controls:MyButton3 Content="MyButton3" />
    </StackPanel>
</UserControl>